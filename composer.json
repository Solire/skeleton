{
  "name": "solire/skeleton",
  "type": "project",
  "description": "",
  "keywords": [""],
  "license": "CC by-nc",
  "repositories": [
    {
      "type": "composer",
      "url": "http://satis.solire.fr/"
    }
  ],
  "require": {
    "php": ">=5.6",
    "doctrine/dbal": "2.4.*",
    "solire/install": "dev-master",
    "solire/lib": "dev-master",
    "solire/back": "dev-master",
    "solire/front": "dev-master"
  },
  "require-dev": {
    "m6web/coke": "~1.2",
    "siwayll/phpcs-norme-dpsi": "~3.0"
  },
  "scripts": {
    "post-install-cmd": [
      "Solire\\Install\\Project::name",
      "Solire\\Install\\Ask::parameters",
      "Solire\\Install\\Db::create",
      "Solire\\Install\\Symlinks::create",
      "Solire\\Install\\Git::reinit"
    ],
    "post-update-cmd": [
      "Solire\\Install\\Symlinks::create"
    ]
  },
  "extra": {
    "solire": {
      "ask" : {
        "config/local" : {
          "sections" : ["database", "base"]
        },
        "config/marvin" : {
          "sections" : ["contact"]
        }
      },
      "db" : [
        {
          "config" : "config/local.ini",
          "section" : "database",
          "import" : "db/skeleton.sql"
        }
      ]
    }
  }
}
