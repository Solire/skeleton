{
  "repositories": [
    {
      "type": "composer",
      "url": "http://satis.solire.fr/"
    }
  ],
  "autoload": {
    "psr-4": { "Install\\": "./Install/" }
  },
  "require-to-come": {
    "solire/lib": ">=4.2",
    "solire/back": ">=4.2",
    "solire/front": ">=4.2"
  },
  "require": {
    "php": ">=5.5",
    "doctrine/dbal": "~2.4.0",
    "symfony/console": "2.*"
  },
  "require-dev": {
    "composer/composer": "1.0.*@dev"
  },
  "scripts": {
    "post-install-cmd": [
      "Install\\Ask::Parameters",
      "Install\\Db::Create"
    ],
    "post-update-cmd": [
      "Install\\Ask::Parameters",
      "Install\\Db::Create"
    ]
  },
  "extra": {
    "solire": {
      "parameters" : {
        "config/local" : {
          "sections" : ["database", "base"],
          "hideAnswer" : {
            "database" : ["password"]
          }
        },
        "config/marvin" : {
          "sections" : ["contact"]
        },
        "config/main" : {
          "sections" : ["project"]
        }
      },
      "db" : [
        {
          "config" : "config/local.ini",
          "section" : "database",
          "import" : "db/squelette.sql"
        }
      ]
    }
  }
}
